<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<phpunit backupGlobals="false" backupStaticAttributes="false" bootstrap="./tests/bootstrap.php" convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true">
	<filter>
		<whitelist>
			<directory suffix=".php">./Nella</directory>
			<exclude>
				<directory suffix=".php">./Nella/Diagnostics</directory>
				<directory suffix=".php">./Nella/Doctrine/Diagnostics</directory>
				<directory suffix=".php">./Nella/Templating/Diagnostics</directory>
				<file>./Nella/shortcuts.php</file>
				<file>./Nella/Localization/shortcuts.php</file>
				<file>./Nella/loader.php</file>
				<file>./Nella/Framework.php</file>
				<directory suffix=".php">./vendors</directory>
			</exclude>
		</whitelist>
	</filter>
	<testsuites>
		<testsuite name="Nella Framework Test Suite">
			<directory>./tests/cases</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="build/coverage" title="Nella Framework" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
		<log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>
</phpunit>